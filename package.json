{
  "name": "p2p-file-share",
  "version": "1.0.0",
  "description": "Full-stack P2P file sharing with WebRTC and mDNS discovery",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm run dev",
    "build": "pwd && ls -la && echo 'Starting build...' && vite build && echo 'Build completed, checking output...' && ls -la client/ && ls -la client/dist && echo 'Build verification complete'",
    "start": "node server/index.js",
    "postinstall": "npm run build"
  },
  "keywords": ["p2p", "webrtc", "file-sharing", "mdns", "react"],
  "author": "P2P File Share",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "cors": "^2.8.5",
    "bonjour-service": "^1.0.10",
    "uuid": "^9.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "socket.io-client": "^4.7.2",
    "vite": "^4.4.5",
    "@vitejs/plugin-react": "^4.0.3",
    "tailwindcss": "^3.3.0",
    "autoprefixer": "^10.4.14",
    "postcss": "^8.4.24"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7"
  }
}